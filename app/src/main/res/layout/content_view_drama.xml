<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ph.edu.up.mydramalist.ViewDramaActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/editTextTitle"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextGenre"
            android:layout_below="@+id/scrollView2"
            android:ems="10"
            android:hint="Drama Title"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="66dp">

            <requestFocus />
        </TextView>

        <TextView
            android:id="@+id/editTextGenre"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextTitle"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Genre"
            android:textSize="8sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextTitle" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Native Title:"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextGenre"
        android:layout_alignStart="@+id/editTextDateAired"
        tools:layout_editor_absoluteY="112dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/editTextNative"
        android:text="Country:"
        android:textSize="11sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Episodes:"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/editTextCountry"
        android:layout_alignBottom="@+id/editTextCountry"
        android:layout_toEndOf="@+id/editTextCountry"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="182dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/editTextCountry"
        android:text="Date Aired:"
        android:textSize="11sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteY="152dp"
        tools:layout_editor_absoluteX="8dp" />

        <TextView
            android:id="@+id/editTextNative"
            android:layout_width="275dp"
            android:layout_height="13dp"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/textView2"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Native Title"
            android:textSize="8sp"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/editTextCountry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/editTextNative"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Country"
        android:textSize="8sp"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="68dp" />

    <TextView
        android:id="@+id/editTextEpisodes"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/editTextNative"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Episodes"
        android:textSize="8sp"
        tools:layout_editor_absoluteY="132dp"
        tools:layout_editor_absoluteX="252dp" />

    <TextView
        android:id="@+id/editTextDateAired"
        android:layout_width="275dp"
        android:layout_height="13dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Date Aired"
        android:textSize="8sp"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/editTextGenre"
        tools:layout_editor_absoluteY="152dp"
        tools:layout_editor_absoluteX="75dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        tools:layout_editor_absoluteY="125dp"
        tools:layout_editor_absoluteX="8dp">


    </ScrollView>

        <TextView
            android:id="@+id/editTextDescription"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/editTextGenre"
            android:layout_below="@+id/editTextDateAired"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Description"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="181dp" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ph.edu.up.mydramalist.EditAddActivity"
    tools:showIn="@layout/activity_edit_add_drama">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Drama Title"
        android:inputType="textPersonName"
        android:maxLines="1"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="46dp">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/editTextGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Genre"
        android:textSize="8sp"
        android:textStyle="italic"
        android:layout_above="@+id/editTextNative"
        android:layout_alignStart="@+id/editTextTitle"
        android:layout_alignEnd="@+id/editTextNative" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="Native Title:"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextTitle"
        android:layout_alignStart="@+id/editTextGenre" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Country:"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextNative"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextCountry"
        android:layout_alignBottom="@+id/editTextCountry"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/editTextCountry"
        android:text="Episode(s):"
        android:textSize="11sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Date Aired:"
        android:textSize="11sp"
        android:textStyle="bold"
        android:layout_below="@+id/editTextCountry"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:id="@+id/editTextNative"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignEnd="@+id/editTextTitle"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/editTextCountry"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignStart="@+id/editTextNative"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/editTextEpisodes"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignEnd="@+id/editTextNative"
        android:layout_marginEnd="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <EditText
        android:id="@+id/editTextDateAired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignEnd="@+id/editTextNative"
        android:layout_alignStart="@+id/editTextCountry"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="8sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ScrollView>

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextDateAired"
        android:layout_below="@+id/editTextDateAired"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Description"
        android:textSize="14sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_alignStart="@+id/textView4" />

</RelativeLayout>
